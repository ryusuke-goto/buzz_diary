<div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        <th>
          <%= t('missions.id') %>
        </th>
        <th>
          <%= t('missions.content') %>
        </th>
        <th>
          <%= t('missions.description') %>
        </th>
        <th>
          <%= t('missions.status') %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% challenge_missions.each do |mission| %>
        <tr>
          <td><%= mission.id %></td>
          <td><%= mission.title %></td>
          <td><%= mission.description %></td>
          <td>
            <% if challenge_status[mission.id]&.status %>
              <div class="font-bold text-green-500">
                <%= t('missions.true') %>
              </div>
              <div class="text-gray-600">
                  <% prepare_meta_tags mission %>
                  <% twitter_share_url = "https://twitter.com/share?url=https://praise-diary.onrender.com/diaries" %>
                  <%= link_to twitter_share_url, target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェア" do %>
              ## Xシェアボタンはfontawesome.comから使用しています
                  <i class="fa-brands fa-square-x-twitter fa-2xl"></i>
                  <% end %>
              </div>
            <% else %>
              <div class="font-bold">
                <%= t('missions.false') %>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
