<div id="comment-<%= comment.id %>">
  <div class="chat chat-end flex flex-row-reverse my-3">
    <div class="flex">
      <div class="chat-bubble mx-3">
        <p><%= simple_format(comment.body) %></p>
      </div>
      <div class="avatar pt-1">
        <div class="w-10 h-10 rounded-full">
          <% if comment.user.image.present? %>
            <%= image_tag comment.user.image %>
          <% else %>
            <%= image_tag "https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg", alt: "#{comment.user.name}のアバター", onerror: "this.onerror=null; this.src='/assets/avatar.png'" %>
          <% end %>
        </div>
      </div>
      <div>
        <h3 class="small"><%= comment.user.name %></h3>
        <% if current_user.own?(comment) %>
          <div class="action mx-3">
            <%= link_to comment_path(comment.id), class: "delete-comment-link", data:{turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>